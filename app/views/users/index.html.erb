<h3>Users</h3>
<table class="table">
  <tr>
    <th>ID</th>
    <th>User</th>
    <th>Karma</th>
    <th>Admin?</th>
    <th></th>
    <th>Number of shows</th>
  </tr>
  <% @users.each do |user| %>
  <tr>
    <td><%= user.id %></td>
    <td><%= mail_to user.email %></td>
    <td><%= user.karma %></td>
    <td><%= user.is_admin %></td>
    <td>
      <% if user.is_editor %>
      <% else %>
        <%= link_to "make editor", make_editor_path(:user_id => user.id), :method => :post, :class => "btn btn-small btn-info" %>
      <% end %>
    </td>
    <td><%= user.shows.count %></td>
  </tr>
  <% end %>
</table>
