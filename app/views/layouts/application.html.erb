<!DOCTYPE html>
<html>
<head>
  <title><%= @title || "The Hobo's Companion" %> | Railroad Earth</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <meta name="description" content="<%= @description %>">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
  <div class="navbar navbar-static-top">
    <div class="navbar-inner">
      <div class="container">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <%= link_to "the Hobo's Companion", root_path, :class => "brand" %>
        <div class="nav-collapse collapse">
          <ul class="nav">
            <%= content_tag :li, link_to("Songs", songs_path) %>
            <%= content_tag :li, link_to("Shows", shows_path) %>
            <%= content_tag :li, link_to("Venues", venues_path) %>
          </ul>
          <ul class="nav pull-right">
          <% if current_user %>
            <%= content_tag :li, :class => "dropdown" do %>
              <%= link_to("Contribute", '', :class => "dropdown-toggle", :data => { :toggle => "dropdown" }) %>
              <%= content_tag :ul, :class => "dropdown-menu" do %>
                <%= content_tag :li, link_to("Add a setlist!", new_show_path) %>
                <%= content_tag :li, link_to("Edit a song!", songs_path) %>
              <% end %>
            <% end %>
          <% end %>
          <% if is_admin? %>
            <%= content_tag :li, :class => "dropdown" do %>
              <%= link_to("Admin", '', :class => "dropdown-toggle", :data => { :toggle => "dropdown" }) %>
              <%= content_tag :ul, :class => "dropdown-menu" do %>
                <%= content_tag :li, link_to("Users", users_path) %>
                <%= content_tag :li, link_to("Flagged Songs", deleted_songs_path) %>
              <% end %>
            <% end %>
          <% end %>
          <% if current_user %>
            <%= content_tag :li, link_to("Log out (#{current_user.karma})", destroy_user_session_path, :method => :delete) %>
          <% else %>
            <%= content_tag :li, link_to("Sign up", new_user_registration_path) %>
            <%= content_tag :li, link_to("Sign in", new_user_session_path) %>
          <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
  <div class="container">
    <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>">
        <%= value %>
      </div>
    <% end %>
  <%= yield %>
  </div>
  <%= javascript_include_rpx user_session_url %>
</body>
</html>
