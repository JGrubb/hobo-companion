  <div class="navbar navbar-static-top">
    <div class="navbar-inner">
      <div class="container">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <%= link_to "the Hobo's Companion", root_path, :class => "brand" %>
        <div class="nav-collapse collapse">
          <ul class="nav">
            <%= content_tag :li, link_to("Songs", songs_path) %>
            <%= content_tag :li, link_to("Shows", shows_path) %>
            <%= content_tag :li, link_to("Venues", venues_path) %>
          </ul>
          <ul class="nav pull-right">
          <% if is_admin? %>
            <%= content_tag :li, :class => "dropdown" do %>
              <%= link_to("Contribute", '', :class => "dropdown-toggle", :data => { :toggle => "dropdown" }) %>
              <%= content_tag :ul, :class => "dropdown-menu" do %>
                <%= content_tag :li, link_to("Add a setlist!", new_show_path) %>
                <%= content_tag :li, link_to("Edit a song!", songs_path) %>
              <% end %>
            <% end %>
            <%= content_tag :li, :class => "dropdown" do %>
              <%= link_to("Admin", '', :class => "dropdown-toggle", :data => { :toggle => "dropdown" }) %>
              <%= content_tag :ul, :class => "dropdown-menu" do %>
                <%= content_tag :li, link_to("Users", users_path) %>
                <%= content_tag :li, link_to("Flagged Songs", deleted_songs_path) %>
              <% end %>
            <% end %>
          <% end %>
          <% if current_user %>
            <%= content_tag :li, :class => "dropdown" do %>
              <%= link_to("#{user_name} (#{current_user.karma})", '', :class => "dropdown-toggle", :data => { :toggle => "dropdown" }) %>
              <%= content_tag :ul, :class => "dropdown-menu" do %>
                <%= content_tag :li, link_to("Edit yourself", edit_user_registration_path) %>
                <%= content_tag :li, link_to("Log out", destroy_user_session_path, :method => :delete) %>
              <% end %>
            <% end %>
          <% else %>
            <%= content_tag :li, link_to("Sign up", new_user_registration_path) %>
            <%= content_tag :li, link_to("Sign in", new_user_session_path) %>
          <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
