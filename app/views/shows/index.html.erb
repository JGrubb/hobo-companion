<h4><em>Total shows from <%= @shows.last.date.strftime '%b %d, %Y'%> to <%= @shows.first.date.strftime '%b %d, %Y'%></em> - <strong><%= @shows.count %></strong></h4>
<table class="table">
<% @shows.each do |show| %>
<tr>
  <td><%= show.date.strftime('%D') %></td>
  <td><%= "#{show.city}, #{show.state}" %></td>
  <td><%= link_to show.name, show %></td>
  <td>
  <% if current_user %>
    <% if show.user_id %>
      <%= link_to "Just kidding, I wasn't actually there", delete_show_tag_path(show.id), :method => :delete, :remote => true, :class => "btn btn-mini" %>
    <% else %>
      <%= link_to "I was there", tag_show_path(show.id), :method => :post, :remote => true, :class => "btn btn-mini btn-primary" %>
    <% end %>
  <% end %>
  </td>
</tr>
<% end %>
</table>
