<div class="row-fluid">
  <h2><%= @show.date.strftime '%B %d, %Y' %></h2>
  <h3><%= link_to "#{@venue.name} - #{@venue.city}, #{@venue.state}", @venue %></h3>

  <div id="setlist" class="span6">
    <% @possible_sets.each do |set| %>
      <% unless @songs.select { |s| s.set_number == set.set_number }.empty? %>
        <h5><%= x = set.set_number.to_i > 0 ? "Set #{set.set_number}" : "#{set.set_number}" %></h5>
        <% @songs.select { |s| s.set_number == set.set_number }.each do |song| %>
          <% if song.song.is_song %>
            <div><%= link_to song.song.title, song.song %> <%= "->" if song.transition %> <%= song.song_notes%></div>
          <% else %>
            <div><%= song.song.title %></div>
          <% end %>  
        <% end %>
      <% end %>
    <% end %>
  </div>
  
  <div id="show-notes" class="well span5">
    <h4>Show notes</h4>
    <p><%= simple_format @show.show_notes %></p>
    <div>
      <% if @archive_info %>
        <h4>Archive recordings</h4>
        <% @archive_info["docs"].each do |show| %>
        <p><%= content_tag :strong, link_to("http://archive.org/details/#{show['identifier']}", "http://archive.org/details/#{show['identifier']}", :target => "_new") %><br />
        <em>Average rating: <%= show["avg_rating"]%></em></p>
        <% end %>
      <% end %>
    </div>
    
    <% if current_user && current_user.is_editor? %>
      <%= link_to "edit show", edit_show_path(@show), :class => "btn btn-small btn-success" %>
    <% end %>  
    <% if is_admin? %>
      <%= link_to "delete show", show_path(@show), :class => "btn btn-small btn-danger", :data => { :method => :delete, :confirm => "Are you sure?" }%>
    <% end %>
  </div>

</div>